<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:rowCount="3" android:columnCount="2">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/detail_title"
            android:layout_marginTop="23dp"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/favorite"
            android:layout_marginLeft="31dp"
            android:layout_marginStart="31dp" android:layout_alignBottom="@+id/countProduct"
            android:layout_alignLeft="@+id/describe_view" android:layout_alignStart="@+id/describe_view"
            android:src="@android:drawable/btn_star_big_off"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/platzhalter"
            android:contentDescription="Image"
            android:layout_alignTop="@+id/detail_title" android:layout_centerHorizontal="true"/>
    <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/countProduct"
            android:nestedScrollingEnabled="false" android:layout_alignBottom="@+id/imageButton"
            android:layout_toLeftOf="@+id/priceView" android:layout_toStartOf="@+id/priceView" android:text="0"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:src="@android:drawable/ic_menu_add"
            android:layout_marginRight="23dp" android:layout_marginEnd="23dp" android:layout_centerVertical="true"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/priceView"
            android:layout_centerVertical="true" android:layout_toLeftOf="@+id/imageButton"
            android:layout_toStartOf="@+id/imageButton"/>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="jnkjbkjbÃ¶kkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkk"
            android:scrollbars="vertical"
            android:fadeScrollbars="true"
            android:scrollbarStyle="insideOverlay"
            android:fadingEdge="vertical"
            android:id="@+id/describe_view"
            android:layout_below="@+id/favorite" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginTop="24dp" android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" android:layout_marginBottom="5dp"/>
</RelativeLayout>