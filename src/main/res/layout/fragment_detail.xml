            android:fontFamily="fonts/Aller_Rg.ttf"
            android:src="@android:drawable/btn_star_big_off"
            android:layout_below="@+id/surfaceView12" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
