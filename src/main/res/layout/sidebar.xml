<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
    android:background="#ff6e61">

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" style="@android:style/Theme.DeviceDefault.Light.DarkActionBar"
            android:id="@android:drawable/ic_menu_gallery">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_column="12"
                android:layout_weight="2">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="textsidebar"
                    android:fontFamily="fonts/Aller_Rg.ttf"
                    android:id="@+id/textsidebar"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp" android:layout_alignBottom="@+id/imgsidebar"
                    android:layout_toRightOf="@+id/imgsidebar" android:layout_toEndOf="@+id/imgsidebar"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgsidebar" android:layout_column="16"
                    android:src="@android:drawable/ic_menu_gallery" android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
            <SurfaceView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:id="@+id/surfaceView8" android:layout_column="0"
                    android:background="#030303"
                    android:layout_below="@+id/textsidebar" android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" android:layout_marginTop="5dp"/>
        </RelativeLayout>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </TableRow>
</TableLayout>