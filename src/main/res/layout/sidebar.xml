<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="80dp" style="@android:style/Theme.DeviceDefault.Light.DarkActionBar"
            android:id="@android:drawable/ic_menu_gallery">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgsidebar" android:layout_column="16"
                android:src="@android:drawable/ic_menu_gallery"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="textsidebar"
                android:id="@+id/textsidebar"/>
    </TableRow>
</TableLayout>