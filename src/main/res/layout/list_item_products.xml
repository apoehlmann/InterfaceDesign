<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="#090909">

    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_imageview" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:src="@drawable/platzhalter" android:scaleType="centerCrop"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:fontFamily="fonts/Aller_Rg.ttf"
            android:id="@+id/name_textview"
            android:layout_below="@+id/product_imageview"
            android:textColor="#ffffff" android:layout_marginLeft="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:fontFamily="fonts/Aller_Rg.ttf"
            android:id="@+id/price_textview"
            android:layout_alignBottom="@+id/name_textview" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:textColor="#ffffff" android:layout_marginRight="10dp"/>
    <SurfaceView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:id="@+id/surfaceView4"
            android:layout_below="@+id/price_textview" android:layout_centerHorizontal="true"
            android:background="#ffffff"/>
    <SurfaceView android:layout_width="fill_parent" android:layout_height="1dp" android:id="@+id/surfaceView5"
                 android:background="#ffffff" android:layout_below="@+id/surfaceView4"
                 android:layout_centerHorizontal="true" android:layout_marginTop="1dp"/>
    <SurfaceView android:layout_width="fill_parent" android:layout_height="1dp" android:id="@+id/surfaceView6"
                 android:background="#ffffff" android:layout_below="@+id/surfaceView5"
                 android:layout_centerHorizontal="true" android:layout_marginTop="1dp"/>
</RelativeLayout>