<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/item_title_basket"
            android:layout_marginLeft="22dp" android:layout_marginStart="22dp"
            android:layout_marginTop="36dp"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete_basket"
            android:src="@android:drawable/ic_delete"
            android:layout_marginRight="18dp" android:layout_marginEnd="18dp"
            android:layout_alignBottom="@+id/item_title_basket" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/baskettextfield_basket"
            android:layout_alignBottom="@+id/delete_basket" android:layout_toLeftOf="@+id/delete_basket"
            android:layout_toStartOf="@+id/delete_basket" android:layout_marginRight="29dp"
            android:layout_marginEnd="29dp"/>
</RelativeLayout>