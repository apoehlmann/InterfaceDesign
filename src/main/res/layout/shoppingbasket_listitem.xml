<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:background="#c1ff2711">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/item_title_basket"
            android:fontFamily="fonts/Aller_Rg.ttf"
            android:layout_marginLeft="15dp"
            android:layout_alignParentTop="false" android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_centerVertical="true"/>
    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/delete_basket"
            android:src="@android:drawable/ic_delete"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_centerVertical="true" android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
    <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:gravity="center"
            android:text="0"
            android:fontFamily="fonts/Aller_Rg.ttf"
            android:id="@+id/baskettextfield_basket"
            android:background="#ff6e61"
            android:layout_toLeftOf="@+id/delete_basket"
            android:layout_centerVertical="true" android:layout_marginLeft="5dp"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView2"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentTop="false" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"/>
    <SurfaceView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:id="@+id/surfaceView7"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:background="#070707" android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    <SurfaceView android:layout_width="fill_parent" android:layout_height="1dp" android:id="@+id/surfaceView15"
                 android:background="#070707" android:layout_below="@+id/surfaceView7"
                 android:layout_centerHorizontal="true" android:layout_marginTop="1dp"
                 android:layout_alignParentLeft="true" android:layout_alignParentRight="true"
                 android:layout_above="@+id/surfaceView7"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="price"
            android:id="@+id/priceBasketView" android:layout_alignTop="@+id/baskettextfield_basket"
            android:layout_toLeftOf="@+id/baskettextfield_basket"
            android:layout_toStartOf="@+id/baskettextfield_basket" android:layout_marginRight="5dp"
            android:layout_centerVertical="true"/>
</RelativeLayout>